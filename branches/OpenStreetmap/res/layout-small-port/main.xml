<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="0dp">
        
		<TabWidget android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

		<FrameLayout 
		android:layout_height="fill_parent" 
		android:id="@android:id/tabcontent" 
		android:layout_width="fill_parent">
			<ScrollView 
			android:layout_height="fill_parent" 
			android:padding="10px" 
			android:layout_width="wrap_content">
				<TableLayout android:id="@+id/position" 
				android:layout_width="fill_parent"  
				android:layout_height="wrap_content">
					<TextView 
						android:textSize="15sp" 
						android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:id="@+id/actualPosTextView"
						android:text="@string/YourActualPosition"/>
					<TextView android:text="@string/select_other_station"
						android:id="@+id/TextView_Text_select_other_station"
						android:paddingTop="10px" 
						android:layout_height="fill_parent"
						android:layout_width="fill_parent" 
						android:layout_gravity="center_horizontal"/>
					<Spinner android:layout_width="wrap_content"
						android:layout_height="wrap_content" 
						android:id="@+id/otherStation"
						android:layout_margin="10px" 
						android:drawSelectorOnTop="true"/>
					<TextView
						android:textSize="15sp"
						android:id="@+id/nextConnections"
						android:paddingTop="10sp" 
						android:layout_height="fill_parent"
						android:layout_width="fill_parent" 
						android:layout_gravity="center_horizontal"/>
					<TextView
						android:textSize="15sp" android:textStyle="bold"
						android:id="@+id/conn_forward" android:layout_height="fill_parent"
						android:layout_width="fill_parent" android:layout_gravity="center_horizontal"/>
					<TextView
						android:textSize="15sp" android:textStyle="bold"
						android:id="@+id/conn_backward" android:layout_height="fill_parent"
						android:layout_width="fill_parent" android:layout_gravity="center_horizontal"/>
					<TextView 
						android:textSize="15sp"
						android:id="@+id/exactTimes" android:layout_height="fill_parent"
						android:layout_width="fill_parent" android:layout_gravity="center_horizontal"
						android:paddingTop="10sp"/>
				</TableLayout>
			</ScrollView>

			<ScrollView android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:id="@+id/roadmapScrollView"
				android:layout_weight="1">
				<TableLayout android:layout_width="wrap_content"
					android:layout_height="fill_parent" android:id="@+id/roadmap"></TableLayout>
			</ScrollView>
			
			<FrameLayout android:layout_width="fill_parent"
				android:layout_height="fill_parent" android:id="@+id/mapScrollView"
				android:layout_weight="1">
					<org.osmdroid.views.MapView
						android:layout_width="fill_parent"
						android:layout_height="fill_parent"
						android:id="@+id/OSMview"/>
			</FrameLayout>
		</FrameLayout>
	</LinearLayout>
</TabHost>